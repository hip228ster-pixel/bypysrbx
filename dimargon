 <script>
 const usernameInput = document.getElementById('username');
 const rbxInput = document.getElementById('rbxid');
 const msg = document.getElementById('message');
 const btn = document.getElementById('submitBtn');

 function showMessage(text, ok = true){
 msg.style.display = 'block';
 msg.style.background = ok ? 'linear-gradient(90deg, rgba(6,182,212,0.08), rgba(34,197,94,0.04))' :
 'linear-gradient(90deg, rgba(244,63,94,0.06), rgba(255,99,132,0.03))';
 msg.textContent = text;
 }

 btn.addEventListener('click', ()=> {
 const u = usernameInput.value.trim();
 const id = rbxInput.value.trim();

 if(!u){
 showMessage('Введите username обидчика (поле не должно быть пустым).', false);
 return;
 }
 if(u.includes('@')){
 showMessage('Пожалуйста, введите username без символа "@".', false);
 return;
 }
 if(!id){
 showMessage('Введите rbyx ID s обидчика (поле не должно быть пустым).', false);
 return;
 }
 // простая проверка: допустим, ID должен быть цифрами
 if(!/^\d+$/.test(id)){
 showMessage('rbyx ID s должен содержать только цифры.', false);
 return;
 }

 // Демонстрационное поведение: никаких внешних запросов!
 showMessage('Демонстрация: данные приняты. Это локальный макет и не отправляет информацию.', true);
 });

 // Дополнительно: не позволяем вводить "@"
 usernameInput.addEventListener('input', ()=> {
 if(usernameInput.value.includes('@')){
 usernameInput.value = usernameInput.value.replace(/@/g, '');
 }
 });
 </script>
